#!/bin/sh

set -eu

soversion=$(sh ./get-provider-soversion.sh)

infile=./debian/control.in
outfile=./debian/control

cat > $outfile <<EOF
# This file is autogenerated. DO NOT EDIT!
#
# Modifications should be made to debian/control.in instead.
# This file is regenerated automatically in the clean target.
#
EOF

sed -e "s/@PROVIDER_SOVERSION@/${soversion}/" < $infile >> $outfile

exit 0
